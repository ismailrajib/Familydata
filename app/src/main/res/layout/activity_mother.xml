<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mother"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mohammedismail.familydata.mother">
    <TextView
        android:text="Mrs. Josna Begum"
        android:layout_width="wrap_content"
        android:textColor="@color/colorpurple"
        android:textSize="22dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="40dp"
        android:id="@+id/b1" />

    <TextView
        android:text="S/O Mohammad Shah Alam"
        android:layout_width="wrap_content"
        android:textColor="@color/colorpurple"
        android:textSize="22dp"
        android:layout_height="wrap_content"
        android:id="@+id/b2"
        android:layout_below="@+id/b1"
        android:layout_alignStart="@+id/b1"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="Senowara Begum"
        android:layout_width="wrap_content"
        android:textColor="@color/colorpurple"
        android:textSize="22dp"
        android:layout_height="wrap_content"
        android:id="@+id/b3"
        android:layout_below="@+id/b1"
        android:layout_alignStart="@+id/b2"
        android:layout_marginTop="40dp"/>

    <TextView
        android:text="Housewife"
        android:layout_width="wrap_content"
        android:textColor="@color/colorpurple"
        android:textSize="22dp"
        android:layout_height="wrap_content"
        android:id="@+id/b4"
        android:layout_below="@+id/b1"
        android:layout_alignStart="@+id/b2"
        android:layout_marginTop="70dp"/>
    <TextView
        android:text="মা জননী আমার one and only কামের কুলি আমাকে ছাড়া কাওকে চেনে না।"
        android:layout_width="wrap_content"
        android:textColor="@color/colorpurple"
        android:textSize="22dp"
        android:layout_height="wrap_content"
        android:id="@+id/b5"
        android:layout_below="@+id/b1"
        android:layout_alignStart="@+id/b2"
        android:layout_marginTop="100dp"/>
</RelativeLayout>
