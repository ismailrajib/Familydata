<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_brother"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mohammedismail.familydata.Brother">


<TextView
        android:text="Mohammed Imran"
        android:layout_width="wrap_content"
        android:textColor="@color/colorpurple"
        android:textSize="22dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="40dp"
        android:id="@+id/c1" />

    <TextView
        android:text="Student of Port City International"
        android:layout_width="wrap_content"
        android:textColor="@color/colorpurple"
        android:textSize="22dp"
        android:layout_height="wrap_content"
        android:id="@+id/c2"
        android:layout_below="@+id/c1"
        android:layout_alignStart="@+id/c1"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="Dept. ELL"
        android:layout_width="wrap_content"
        android:textColor="@color/colorpurple"
        android:textSize="22dp"
        android:layout_height="wrap_content"
        android:id="@+id/c3"
        android:layout_below="@+id/c1"
        android:layout_alignStart="@+id/c2"
        android:layout_marginTop="40dp"/>

    <TextView
        android:text="খায় ঘুমায় আর আড্ডাবাজী করে।"
        android:layout_width="wrap_content"
        android:textColor="@color/colorpurple"
        android:textSize="22dp"
        android:layout_height="wrap_content"
        android:id="@+id/c4"
        android:layout_below="@+id/c1"
        android:layout_alignStart="@+id/c2"
        android:layout_marginTop="70dp"/>

</RelativeLayout>