<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/father"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mohammedismail.familydata.familysecondactivity">

    <TextView
        android:text="Mohammed Iqbal Meah"
        android:layout_width="wrap_content"
        android:textColor="@color/colorpurple"
        android:textSize="22dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="40dp"
        android:id="@+id/a1" />

    <TextView
    android:text="S/O Mohammed Meah "
    android:layout_width="wrap_content"
    android:textColor="@color/colorpurple"
    android:textSize="22dp"
    android:layout_height="wrap_content"
    android:id="@+id/a2"
    android:layout_below="@+id/a1"
    android:layout_alignStart="@+id/a1"
    android:layout_marginTop="10dp" />

    <TextView
        android:text="Fatema Begum"
        android:layout_width="wrap_content"
        android:textColor="@color/colorpurple"
        android:textSize="22dp"
        android:layout_height="wrap_content"
        android:id="@+id/a3"
        android:layout_below="@+id/a1"
        android:layout_alignStart="@+id/a2"
        android:layout_marginTop="40dp"/>

    <TextView
        android:text="Immigrant Bangladeshi Businessman"
        android:layout_width="wrap_content"
        android:textColor="@color/colorpurple"
        android:textSize="22dp"
        android:layout_height="wrap_content"
        android:id="@+id/a4"
        android:layout_below="@+id/a1"
        android:layout_alignStart="@+id/a2"
        android:layout_marginTop="70dp"/>
</RelativeLayout>
